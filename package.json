{
  "name": "@nextfaze/ngx-translate-quickcreate",
  "description": "Create ngx-translate strings easily",
  "version": "1.0.0",
  "publisher": "nextfaze",
  "engines": {
    "vscode": "^1.20.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:extension.generateTranslationString"],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateTranslationString",
        "title": "Generate Translation String"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
